@model Candidate

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body border-bottom p-4">
        <form method="post" class="row">
            <div class="p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating py-1 col-12">
                    <input asp-for="CandidateName" class="form-control border shadow"/>
                    <label asp-for="CandidateName" class="ms-2"></label>
                    <span asp-validation-for="CandidateName" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Location" class="form-control border shadow"/>
                    <label asp-for="Location" class="ms-2"></label>
                    <span asp-validation-for="Location" class = "text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Industry" class="form-control border shadow"/>
                    <label asp-for="Industry" class="ms-2"></label>
                    <span asp-validation-for="Industry" class="text-danger"></span>
                </div>
                

                <div class="form-floating py-1 col-12">
                    <input asp-for="ProfilePicUrl" class="form-control border shadow" />
                    <label asp-for="ProfilePicUrl" class="ms-2"></label>
                    <span asp-validation-for="ProfilePicUrl" class="text-danger"></span>
                </div>


                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-secondary w-100">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>