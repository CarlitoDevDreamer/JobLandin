@model IEnumerable<Job>
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Jobs List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">

        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Job" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Create New Job
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Company</th>
                    <th>Job Title</th>
                    <th>Job Description</th>
                    <th>Job Location</th>
                    <th>Salary</th>
                    <th>Application Method</th>
                    <th>Apply Now</th>
                    <th>Date Created</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var job in Model)
                {
                    <tr>
                        <td>@job.CompanyId</td>
                        <td>@job.Title</td>
                        <td>@job.Description</td>
                        <td>@job.Location</td>
                        <td>@job.Salary</td>
                        <td>@job.ApplicationMethod</td>
                        <td>
                            @if (job.ApplicationMethod == ApplicationType.Link)
                            {
                                <a href="@job.ApplicationDetails" class="btn btn-primary" target="_blank">Apply Now</a>
                            }
                            else if (job.ApplicationMethod == ApplicationType.Email)
                            {
                                <a href="mailto:@job.ApplicationDetails" class="btn btn-primary">Apply Now</a>
                            }
                            else if (job.ApplicationMethod == ApplicationType.Phone)
                            {
                                <a href="tel:@job.ApplicationDetails" class="btn btn-primary">Apply Now</a>
                            }
                            else
                            {
                                <button type="button" class="btn btn-primary" onclick="handleApplication('@job.ApplicationMethod', '@job.ApplicationDetails')">Apply Now</button>
                            }
                        </td>

                        <td>@job.CreatedAt</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Update" asp-route-jobId="@job.Id" class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-jobId="@job.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>